{
  "name": "zotero-plugin-scaffold",
  "version": "0.0.8",
  "description": "A scaffold for Zotero plugin development.",
  "scripts": {
    "dev": "unbuild --stub",
    "build": "tsc --noEmit && unbuild",
    "lint": "eslint --max-warnings=0 . && prettier --check .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "release": "release-it --only-version --preReleaseId=beta",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "zotero-plugin": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "zotero",
    "plugin",
    "developer",
    "scaffold",
    "web-ext"
  ],
  "author": "northword",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/northword/zotero-plugin-scaffold.git"
  },
  "bugs": {
    "url": "https://github.com/northword/zotero-plugin-scaffold/issues"
  },
  "homepage": "https://github.com/northword/zotero-plugin-scaffold#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "directories": {
    "lib": "dist",
    "doc": "docs"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.14.0",
  "dependencies": {
    "@inquirer/prompts": "^3.3.2",
    "bumpp": "^9.3.0",
    "c12": "^1.10.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "consola": "^3.2.3",
    "conventional-changelog": "^5.1.0",
    "esbuild": "^0.20.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "hookable": "^5.5.3",
    "mime": "^4.0.1",
    "octokit": "^3.1.2",
    "radash": "^12.1.0",
    "replace-in-file": "^7.1.0",
    "std-env": "^3.7.0",
    "update-notifier": "^7.0.0",
    "web-ext": "^7.11.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/conventional-changelog": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.16",
    "@types/update-notifier": "^6.0.8",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "release-it": "^17.0.3",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "node-fetch"
      ]
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(publish): release v${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": false
    }
  }
}
