{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "isolatedDeclarations": true,
    "skipLibCheck": true
  },
  "include": ["src", "test", "src/types"]
}
